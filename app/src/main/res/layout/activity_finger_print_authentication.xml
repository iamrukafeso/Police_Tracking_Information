<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fingerPrint"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/ic_finger_print_authentication_background"
    android:layout_height="match_parent"
    tools:context=".FingerPrintAuthentication">


    <TextView
        android:id="@+id/headingLabel"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="155dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorBackground"
        android:textSize="28dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fingerprintImage"
        android:layout_width="141dp"
        android:layout_height="142dp"
        android:layout_below="@+id/headingLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="137dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/biometric" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerprintImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="136dp"
        android:text="Touch ID"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="78dp"
        android:text="@string/instructions"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/paraLabel"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="40dp"
        android:padding="20dp"
        android:text="Place your Finger on the Scanner to Proceed"
        android:textAlignment="center"
        android:textColor="@color/colorBackground" />

    <Button
        android:id="@+id/loginInsteadBtn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/paraLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/ic_proceed"
        android:text="Login Instead"
        android:textColor="@color/colorBackground"
        android:textSize="16dp" />

</RelativeLayout >