<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".policeProfile"
    android:background="@color/colorBackground"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include
        layout="@layout/main_toolbar"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/police_profile_image"
                android:layout_width="285dp"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_user_photo"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/doct_ChangeImage"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="Change Image"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/police_FirstName"
                android:layout_width="143dp"
                android:layout_height="38dp"
                android:text="First Name:"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_input"
            android:padding="1dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/police_FirstNameEdit"
                android:layout_width="240dp"
                android:layout_height="50sp"
                android:inputType="textPersonName"
                android:text="Name" />

        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/police_Surname"
                    android:layout_width="143dp"
                    android:layout_height="38dp"
                    android:text="Surname:"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:background="@drawable/bg_input"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/police_LastNameEdit"
                    android:layout_width="240dp"
                    android:layout_height="50sp"
                    android:inputType="textPersonName"
                    android:text="Surname" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/police_BadgeNo"
                    android:layout_width="143dp"
                    android:layout_height="38dp"
                    android:text="Badge Number"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_input"
                android:padding="1dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/police_BadgeNoEdit"
                    android:layout_width="240dp"
                    android:layout_height="50sp"
                    android:inputType="number"
                    android:text="Badge Number" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/police_Address"
                    android:layout_width="143dp"
                    android:layout_height="38dp"
                    android:text="Address:"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:background="@drawable/bg_input"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/police_AddressEdit"
                    android:layout_width="240dp"
                    android:layout_height="100sp"
                    android:inputType="textPersonName"
                    android:text="Address" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/doctupdateBtn"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:text="Update" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/main_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>